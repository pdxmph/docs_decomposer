  =button_to 'Flag This Page', {:controller => 'flags', :action => :toggle_flag_from_page, :user_id => current_user.id, :page_id => @page.id}, {:class => 'btn btn-danger button-flag', :method => 'post', :format => :js, :remote => true, :id => 'page_flag_button'}
