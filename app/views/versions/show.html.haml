.small.quiet-text
  = link_to "Home", root_path
  &raquo;
  = link_to @version.project.nice_name, project_path(@version.project)
  &raquo;
  
%h3
  = "#{@version.project.nice_name} #{@version.version_number}"

%p.small
  %span.glyphicon.glyphicon-flag.text-danger
  \= Flagged by you
  &nbsp;
  %span.glyphicon.glyphicon-flag.text-muted
  \= Flagged by others
  &nbsp;
  %span.glyphicon.glyphicon-comment.text-primary
  \= Has comments

.btn.btn-danger.btn-xs.button-user-flagged{:id => "risk_button"}
  High-Risk Pages
  &nbsp;
  %span.glyphicon.glyphicon-fire


%table.table
  %thead 
    %tr
      %th
        Risk
      %th
        Page
      %th
        Tags
  %tbody        
    - @version.pages.each do |p|
      = render :partial => "pages/pages_row", :locals => {:p => p}
      
:javascript
  $(function() {
  $("#flag_button").click( function()
  {
     $('.unflagged').toggle();
    }

    );
  });

  $(function() {
  $("#risk_button").click( function()
  {
     $('.low_risk').toggle();
    }

    );
  });
