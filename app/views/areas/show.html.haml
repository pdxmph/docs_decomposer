%ol.breadcrumb
  %li
    = link_to "Home", root_path
  %li
    = link_to "Priority Areas", areas_path
  %li.active
    = @area.name

%h2
  = @area.name
    
- if @area.users.count > 0 
  %p.text-muted
    %span.glyphicon.glyphicon-user
    != @area.users.collect {|user| link_to user.handle, user}.to_sentence
  
!= @area.rendered_description
  
.col-md-3
  %h4
    != "#{display_label(@area.priority, 'Priority')} &nbsp; Areas"
  %ul.list-unstyled
    - Area.priority(@area.priority).each do |a|
      %li
        = link_to a.name, a
    
.col-md-3
  %h4
    != "#{display_label(@area.support_status, 'Risk')} &nbsp; Areas"
  %ul.list-unstyled
    - Area.status(@area.support_status).each do |a|
      %li
        = link_to a.name, a

.col-md-3
  %h4
    != "#{burden_label(@area)} &nbsp; Areas"
  %ul.list-unstyled
    - Area.cost(@area.burden).each do |a|
      %li
        = link_to a.name, a

.col-md-3
  %h4
    != "#{display_label(@area.writer_coverage, 'Coverage')} &nbsp; Areas"
  %ul.list-unstyled
    - Area.cost(@area.burden).each do |a|
      %li
        = link_to a.name, a
