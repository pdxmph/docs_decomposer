%ol.breadcrumb
  %li
    = link_to "Home", root_path

  %li
    = link_to "Users", users_path

  %li.inactive
    = @user.handle

  - if current_user && current_user.id == @user.id
    %li
      = link_to "Edit Account", edit_user_registration_path(@user)

    
%h3
  Flagged Pages

%table.table.sortable
  %thead 
    %tr
      %th
        Priority
      %th
        Risk
      %th{"data-defaultsort" => "asc"}
        Page
      %th
        Tags
  %tbody        
    - @pages.each do |p|
      = render :partial => "pages/pages_row", :locals => {:p => p}

%h3 Commented Pages

%table.table.sortable
  %thead 
    %tr
      %th{:"data-defaultsort" => "desc"}
        Priority
      %th
        Risk
      %th
        Page
      %th
        Tags
  %tbody        
    - @user.commented_pages.each do |p|
      = render :partial => "pages/pages_row", :locals => {:p => p}


      
:javascript

  $(function() {
  $("#priority_button").click( function()
  {

     $("tr[data-priority=2]").toggle();
     $("tr[data-priority=1]").toggle();


    }
    );
  });

  $(function() {
  $("#risk_button").click( function()
  {

     $("tr[data-risk=2]").toggle();
     $("tr[data-risk=1]").toggle();
    }
    );
  });


  $( document ).ready(function() {
  $.bootstrapSortable(true);
  });


  
