%h3.col-sm-offset-2
  New Area

%br
= form_for(@area, :html => {:class => "form-horizontal"} ) do |f|
  .form-group
    = f.label :name, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :name, autofocus: true, :class => 'form-control'

  .form-group
    = f.label :priority, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.select :priority, :class => 'form-control' do
        = content_tag(:option, 'High', value: 3)
        = content_tag(:option, 'Medium', value: 2)
        = content_tag(:option, 'Low', value: 1)
        = content_tag(:option, 'Unprioritized', value: 0)
        = content_tag(:option, 'Unset', value: nil)

  .form-group
    = f.label :work, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :work, :class => 'form-control'

  .form-group
    = f.label :support, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.select :support, :class => 'form-control' do
        = content_tag(:option, 'High', value: 3)
        = content_tag(:option, 'Medium', value: 2)
        = content_tag(:option, 'Low', value: 1)
        = content_tag(:option, 'Unsupported', value: 1)
        = content_tag(:option, 'Unset', value: nil)

  .form-group
    = f.label :frequency, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.select :frequency, :class => 'form-control' do
        = content_tag(:option, 'High', value: 3)
        = content_tag(:option, 'Medium', value: 2)
        = content_tag(:option, 'Low', value: 1)
        = content_tag(:option, 'Never', value: 0)
        = content_tag(:option, 'Unset', value: nil)

        
  .actions.col-sm-offset-2
    .col-sm-4
      = f.submit "Create", :class => 'btn btn-primary'


     
