- @page.reload
- if @page.comments.size > 0
  - @page.comments.each do |c|
    .panel.small.panel-default
      .panel-heading
        %b
          Comment by
          = c.user.name
      .panel-body
        != c.rendered_content
      .panel-footer.small
        Posted
        = c.created_at.strftime('%Y-%m-%d at %I:%M %p')
        %br
        %br

        - if c.user_id == current_user.id
          =link_to 'Delete', "/comments/#{c.id}", :method => :delete, :data => {:confirm => "Really delete this comment?"}, :class => 'btn btn-danger btn-xs pull-right'
          %br
          %br

        
- else
  %p.text-primary.small
    There aren't any comments on this page. 

.text-left
  %a.btn.btn-primary.btn-sm{:id => 'comments_toggle', "data-toggle" => "modal", "data-target" => "#commentModal"}
    Post a Comment
