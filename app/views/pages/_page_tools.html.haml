.btn-group.btn-group-xs
  %a{:href => "/pages/#{@page.previous_page.id}", :class => "btn btn-primary"}
    %span.glyphicon.glyphicon-step-backward
    
  %button.btn.btn-primary.btn-xs.button-content{:id => "composition_button", "data-toggle" => "tooltip", "data-placement" => "top", :title => "Toggle all but ordered lists and pre/code blocks" }
    %span{:id => "content-button", :class => "glyphicon glyphicon-eye-close"}

  %a{:href => "/pages/#{@page.next_page.id}", :class => "btn btn-primary btn-xs"}
    %span.glyphicon.glyphicon-step-forward


.btn-group
  %div{:id => "risk-button-#{@page.id}"}
    = render :partial => "risk_button", :locals => {:page_id => @page.id}

.btn-group
  %div{:id => "priority-button-#{@page.id}"}
    = render :partial => "priority_button", :locals => {:page_id => @page.id}
    
.btn-group        
  %div{:style => "float:left;width:auto;margin-left:.5em;", :id => 'flag_toggle'}      
    = render "page_votes"

