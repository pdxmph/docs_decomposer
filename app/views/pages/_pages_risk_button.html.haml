.btn-group{:id => "risk-button-#{page_id}"}      
  != rank_button(page_id,"Risk")
  %ul.dropdown-menu{:role => "menu"}
    %li
      =link_to pages_set_page_risk_path(:page_id => page_id, :risk => '3'), :remote => true, :method => :post do
        %span.glyphicon.glyphicon-fire.text-danger
        High

    %li
      =link_to pages_set_page_risk_path(:page_id => page_id, :risk => '2'), :remote => true, :method => :post do
        %span.glyphicon.glyphicon-alert.text-warning
        Medium
    %li
      =link_to pages_set_page_risk_path(:page_id => page_id, :risk => '1'), :remote => true, :method => :post do
        %span.glyphicon.glyphicon-ok-sign.text-success
        Low
